    "version": "0.2.0",
    "configurations": [

        {
            "type": "PowerShell",
            "name": "Prepare Docs",
            "request": "launch",
            "script": "poetry run python .mkdocs/scripts/prepare_docs.py --local"
        },
        {
            "type": "PowerShell",
            "name": "Build MKDocs",
            "request": "launch",
            "script": "cd .mkdocs; poetry run mkdocs build -d site --verbose --clean; cd .."
        }
    ]
}